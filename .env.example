# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# PostgreSQL Database (for Payload CMS)
# Get this from Supabase Dashboard > Project Settings > Database > Connection String
# Use the "Connection pooling" URI for better performance
POSTGRES_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Payload CMS Secret (minimum 32 characters)
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-payload-secret-key-here

# Google Maps (required for map view feature)
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_maps_api_key

# Google Gemini AI (required for AI search feature)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Optional: Google Cloud (for destination enrichment)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# ML Service (Python microservice for recommendations and forecasting)
# Local: http://localhost:8000
# Production: https://your-ml-service.railway.app or https://your-ml-service.fly.dev
ML_SERVICE_URL=http://localhost:8000

# Upstash Redis (for rate limiting)
# Optional but recommended for production
# Get from: https://upstash.com (free tier available)
# If not configured, in-memory rate limiting will be used as fallback
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# ==========================================
# AI/ML Configuration (Optional)
# See docs/AI_CONFIGURATION.md for details
# ==========================================

# Cache Configuration
# Controls how long AI results are cached (in milliseconds)
# AI_EMBEDDING_CACHE_TTL=300000        # Default: 5 minutes
# AI_INTENT_CACHE_TTL=300000           # Default: 5 minutes
# AI_SEARCH_CACHE_TTL=300000           # Default: 5 minutes
# AI_MAX_EMBEDDING_CACHE_SIZE=100      # Default: 100 entries
# AI_MAX_INTENT_CACHE_SIZE=100         # Default: 100 entries
# AI_MAX_SEARCH_CACHE_SIZE=100         # Default: 100 entries

# Timeout Configuration
# Prevents AI operations from hanging (in milliseconds)
# AI_EMBEDDING_TIMEOUT=5000            # Default: 5 seconds
# AI_INTENT_TIMEOUT=4000               # Default: 4 seconds
# AI_RESPONSE_TIMEOUT=5000             # Default: 5 seconds
# AI_CONVERSATION_TIMEOUT=5000         # Default: 5 seconds

# Database Query Optimization
# DB_EMBEDDING_BATCH_SIZE=50           # Default: 50 destinations
# DB_RECOMMENDATION_BATCH_SIZE=100     # Default: 100 destinations
# DB_MAX_SEARCH_RESULTS=50             # Default: 50 results
# DB_MAX_ENRICHMENT_RESULTS=3          # Default: 3 results

# Performance Monitoring
# AI_MONITORING_ENABLED=false          # Default: disabled
# AI_LOG_SLOW_QUERIES=false            # Default: disabled
# AI_SLOW_QUERY_THRESHOLD=1000         # Default: 1000ms

# Rate Limiting
# Prevents abuse and controls API costs
# AI_RATE_LIMIT_ENABLED=true           # Default: enabled
# AI_MAX_REQUESTS_PER_MINUTE=30        # Default: 30 requests/minute
# AI_MAX_REQUESTS_PER_HOUR=500         # Default: 500 requests/hour

# Model Configuration
# OPENAI_EMBEDDING_MODEL=text-embedding-3-large
# OPENAI_MODEL=gpt-4o-mini             # Default chat model
# OPENAI_MODEL_COMPLEX=gpt-4.1         # For complex queries
# GEMINI_MODEL=gemini-1.5-flash-latest # Fallback model
# AI_INTENT_TEMPERATURE=0.2            # Default: 0.2 (deterministic)
# AI_RESPONSE_TEMPERATURE=0.7          # Default: 0.7 (creative)

# Feature Flags
# AI_STREAMING_ENABLED=false           # Default: disabled (not implemented)
# AI_ENRICHMENT_ENABLED=true           # Default: enabled
# AI_PERSONALIZATION_ENABLED=true      # Default: enabled
# AI_COLLABORATIVE_FILTERING_ENABLED=true  # Default: enabled

