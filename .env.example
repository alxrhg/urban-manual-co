# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# âš¡ OPTIMIZATION #8: Connection Pooling (saves 50-100ms per query)
# PostgreSQL Database with Connection Pooling
# Get this from Supabase Dashboard > Project Settings > Database > Connection String
# IMPORTANT: Use port 6543 (pooler) instead of 5432 (direct) for better performance!
# Connection pooling reuses connections instead of creating new ones each time
POSTGRES_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection (use only for migrations, slower for queries)
DIRECT_DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# Payload CMS Secret (minimum 32 characters)
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-payload-secret-key-here

# Google Maps (required for map view feature)
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_maps_api_key

# Google Gemini AI (required for AI search feature)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Optional: Google Cloud (for destination enrichment)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# ML Service (Python microservice for recommendations and forecasting)
# Local: http://localhost:8000
# Production: https://your-ml-service.railway.app or https://your-ml-service.fly.dev
ML_SERVICE_URL=http://localhost:8000

# Upstash Redis (for rate limiting)
# Optional but recommended for production
# Get from: https://upstash.com (free tier available)
# If not configured, in-memory rate limiting will be used as fallback
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token
